<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/space_5"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="398dp"
        android:layout_height="89dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/space_4">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/vender_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.168"
            card_view:civ_border_color="@color/gray"
            card_view:civ_border_width="1dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/icon" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/vender_img"
            app:layout_constraintRight_toLeftOf="@+id/iv_subcat_minus"
            app:layout_constraintTop_toTopOf="@+id/vender_img">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <Fonts.LatoBLack
                    android:id="@+id/Store_name"
                    android:layout_width="178dp"
                    android:layout_height="56dp"
                    android:gravity="center"
                    android:text="kjhkjh,mn,mn,mn"
                    android:textColor="#000"
                    android:textSize="23sp" />


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C9C6C6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5"></TextView>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>