<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/space_3"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftEdgeSwipeOffset="0dp"
        app:rightEdgeSwipeOffset="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/green"
            android:gravity="center"
            android:tag="Bottom3"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_rounded_button"
                    android:text="@string/edit"
                    android:textColor="@color/green" />

                <Button
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/edit"
                    android:background="@drawable/bg_rounded_button"
                    android:text="@string/delete"
                    android:textColor="@color/green" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="5dp"
            android:orientation="vertical"
            android:padding="@dimen/space_8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/rb_adres"
                    android:layout_toLeftOf="@+id/rb_adres"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/reciver_name"
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <Fonts.LatoBLack
                            android:id="@+id/tv_adres_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_2"
                            android:layout_marginLeft="@dimen/space_2"
                            android:text="TextView"
                            android:textColor="#000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="City :"
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <Fonts.LatoBLack
                            android:id="@+id/tv_adres_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_2"
                            android:layout_marginLeft="@dimen/space_2"
                            android:text="TextView"
                            android:textColor="#000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/address_tv"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Address :"
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <Fonts.LatoBLack
                            android:id="@+id/address_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_2"
                            android:layout_marginLeft="@dimen/space_2"
                            android:text="TextView"
                            android:textColor="#000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_deli_mobile"
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <Fonts.LatoBLack
                            android:id="@+id/tv_adres_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_2"
                            android:layout_marginLeft="@dimen/space_2"
                            android:text="TextView"
                            android:textColor="#000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5"
                        android:layout_marginBottom="@dimen/space_10"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="119dp"
                            android:layout_height="wrap_content"
                            android:text="@string/delivery_charge"
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <Fonts.LatoBLack

                            android:id="@+id/tv_adres_charge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_2"
                            android:layout_marginLeft="@dimen/space_2"
                            android:text="TextView"
                            android:textColor="#000" />
                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:id="@+id/cross"
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/rb_adres"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"

                    app:srcCompat="@drawable/ic_cancel_black_"></ImageView>

                <RadioButton
                    android:id="@+id/rb_adres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_4"
                    android:layout_marginTop="65dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"

                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/gray" />
            </RelativeLayout>


        </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>


</android.support.v7.widget.CardView>