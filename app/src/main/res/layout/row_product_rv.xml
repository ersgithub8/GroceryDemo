            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/disc"
            app:layout_constraintBottom_toTopOf="@+id/iv_subcat_plus"
            android:layout_marginRight="20dp"
            android:id="@+id/price_mrp"
            android:text="20"
            />

        <LinearLayout
