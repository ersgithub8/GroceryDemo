<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <Fonts.LatoBLack
        android:id="@+id/textView2"
        android:textColor="#fff"
        android:textSize="@dimen/text_size_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delivery time"
        android:padding="@dimen/space_10"
        android:background="@color/green"
        android:textStyle="bold"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:id="@+id/rv_times"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="#000000"
        android:layout_margin="5dp"
        android:text="Please select any one time slot for delivery."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:id="@+id/layout1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morning Time:    "
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/r8"
            android:padding="4dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/morning_time"
            android:text=""
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:fontFamily="@font/r8"
            android:padding="4dp"
            />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_margin="5dp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:id="@+id/layout2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AfterNoon Time:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/r8"
            android:padding="4dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noon_time"
            android:text=""
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:fontFamily="@font/r8"
            android:padding="4dp"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_margin="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:id="@+id/layout3"
        >
        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="Night Time:        "
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/r8"
            android:padding="4dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/night_time"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp"
            android:fontFamily="@font/r8"
            android:padding="4dp"
            />





    </LinearLayout>
</LinearLayout>